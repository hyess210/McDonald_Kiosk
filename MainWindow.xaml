<Window x:Class="McDonald_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McDonald_Kiosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="red">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="101*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Label Background="Transparent"
                   HorizontalAlignment="Right"
                   Margin="0 10 60 0"
                     FontSize="23" Foreground="White" Grid.ColumnSpan="2">2020년 9월 25일 금요일 오전 10:07</Label>
            <Button Width="50" Height="50" HorizontalAlignment="Right" Margin="0,6,6,4" Grid.Column="1">홈버튼</Button>
        </Grid>

        <Grid Grid.Row="1">
            <Frame Name="MainContent" 
                   Grid.ColumnSpan="2"
                   Source="SelectPayment.xaml"></Frame>
        </Grid>

    </Grid>
</Window>
